<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/medIconRecylerViewHomeScreen"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:civ_border_color="#FF000000"

        app:civ_border_width="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="1dp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="16dp"
        android:background="#FF0000FF"
        app:layout_constraintStart_toEndOf="@+id/medIconRecylerViewHomeScreen"
        app:layout_constraintTop_toTopOf="@+id/medIconRecylerViewHomeScreen" />

    <TextView
        android:id="@+id/medNameRecylerViewHomeScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="adol"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <TextView
        android:id="@+id/medDescriptionRecylerViewHomeScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="1g,take1,pill(s)"
        android:textSize="@dimen/_16sdp"
        android:textColor="#9A9999"
        app:layout_constraintStart_toStartOf="@+id/medNameRecylerViewHomeScreen"
        app:layout_constraintTop_toBottomOf="@+id/medNameRecylerViewHomeScreen" />
</androidx.constraintlayout.widget.ConstraintLayout>